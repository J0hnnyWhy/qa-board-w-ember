<h1>{{title}}</h1>

{{#if isEditing}}
  <form>
    <div class="form-group">
      <label for="title">Question</label>
      {{input value=title id="title" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" class="form-control"}}
    </div>

    <button class="btn btn-primary" {{action 'save'}}>Save</button>
  </form>
{{else}}
  <p>{{author}}</p>

  <button class="btn btn-primary" {{action 'edit'}}>Edit</button>
{{/if}}

{{outlet}}

<h2>Answers</h2>

{{#each answer in answers itemController="answer"}}
  <p>
    {{answer.text}}
    <button class="btn btn-xs btn-danger" {{action 'delete'}}>delete answer</button>
  </p>
{{/each}}

<p>{{#link-to 'new-answer' this class="btn btn-primary"}}New answer{{/link-to}}</p>
<button class="btn btn-xs btn-danger" {{action 'delete'}}>delete question</button>